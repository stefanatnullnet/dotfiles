[user]
	name = Stefan Stoilov
	email = stefan@null.net
[core]
	editor = nvim
[difftool]
    prompt = true
[diff]
    tool = nvimdiff
[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
[alias]
	lg = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr %an)%Creset' --abbrev-commit --date=relative
	tree = !git lg --graph
	unstage = reset HEAD
	last = log -1 HEAD
	visual = !gitk
	st = status
	uncommit = reset --soft HEAD^
	progress = diff --stat
	pg = diff --shortstat
[color]
	ui = auto
